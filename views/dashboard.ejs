                }
            }
        });
        return false;
    }); 
});

function showTextarea(url) {
    console.log("imma");
  var xhr = new XMLHttpRequest();
  xhr.onreadystatechange = function() {
      if (this.readyState == 4 && this.status == 200) {
          $("#ckeExample").html(xhr.responseText);
          $("#editor").css("display","block");
          var ckEditorID;
        ckEditorID = 'ckeExample';
        function fnConsolePrint() {
        console.log(CKEDITOR.instances[ckEditorID].getData());
        }
        CKEDITOR.config.forcePasteAsPlainText = true;
        CKEDITOR.replace(ckEditorID, {
        toolbar : [{
            items : ['Bold','Italic','Underline','Strike','-','RemoveFormat']
            }, {
            items : ['Format']
            }, {
            items : ['Link','Unlink']
            }, {
            items : ['Indent','Outdent','-','BulletedList','NumberedList']
            }, {
            items : ['Undo','Redo']
            }
        ]
        });
      }
    };
  xhr.open("GET", "/getText/"+url, true);
  xhr.send();
}

function showDocarea(url) {
    $(".pdf-reader").html("<object width='600' height='400' data='/uploads/"+ url +"'></object>");
}

function showMusicarea(url) {
    $(".musicPlayer").html("<audio controls> <source src='/public/uploads/'"+ url +" type='audio/ogg'> <source src='/public/uploads/'"+ url +" type='audio/mpeg'> <source src='/uploads/'"+ url +" type='audio/wav'> <source src='/public/uploads/'"+ url +" type='audio/mp3'> Unsupported audio format for this browser </audio>");
}

</script>

