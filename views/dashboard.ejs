                    $("#mainfilemdocuments").append("<li><button onclick='showDocarea(&#39;" + response.slice(ind+1,response.length) +"&#39;)'>"+ response.slice(0,ind) + "</button></li>");
                }
            }
        });
        return false;
    }); 
    $('#uploadMusic').submit(function() {
        $(this).ajaxSubmit({
